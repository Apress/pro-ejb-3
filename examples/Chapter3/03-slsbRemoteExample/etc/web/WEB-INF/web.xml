<web-app version="2.5"
         xmlns="http://java.sun. com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
    <servlet>
        <servlet-name>HelloServiceServlet</servlet-name>
        <servlet-class>examples.servlet.HelloServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServiceServlet</servlet-name>
        <url-pattern>/HelloServiceServlet</url-pattern>
    </servlet-mapping>

    <ejb-ref>
        <ejb-ref-name>ejb/HelloService</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>examples.stateless.HelloServiceRemote</remote>
    </ejb-ref>	
</web-app>